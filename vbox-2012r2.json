{
  "builders": [
    {
      "type": "virtualbox-iso",
      "vboxmanage": [
        [ "modifyvm", "{{.Name}}", "--natpf1", "guest_winrm,tcp,,55985,,5985" ],
        [ "modifyvm", "{{.Name}}", "--memory", "2048" ],
        [ "modifyvm", "{{.Name}}", "--vram", "72" ],
        [ "modifyvm", "{{.Name}}", "--cpus", "2" ],
        [ "setextradata", "global", "GUI/SuppressMessages", "all" ]
      ],
      "guest_os_type": "Windows2012_64",
      "headless": "{{ user `headless` }}",
      "iso_url": "{{ user `iso_url` }}",
      "iso_checksum": "{{ user `iso_checksum` }}",
      "iso_checksum_type": "sha1",
      "communicator": "winrm",
      "winrm_username": "{{user `user`}}",
      "winrm_password": "{{user `password`}}",
      "winrm_timeout": "6h",
      "boot_wait": "1m",
      "guest_additions_mode": "disable",
      "shutdown_command": "C:/windows/system32/sysprep/sysprep.exe /generalize /oobe /unattend:C:/Windows/Panther/Unattend/unattend.xml /quiet /shutdown",
      "shutdown_timeout": "15m",
      "floppy_files": [
        "./answer_files/2012_r2/Autounattend.xml",
        "./scripts/postunattend.xml",
        "./scripts/win-updates.ps1",
        "./scripts/set-wsusserver.bat"
      ]
    }
  ],
  "provisioners": [
    {
      "type":"powershell",
      "inline": [
        "(iex ((new-object net.webclient).DownloadString('http://artifactory.otas.nv/chocoinstall.ps1')))>$null 2>&1",
        "choco install 7zip -y",
        "choco install telnet-client -source windowsfeatures -y",
        "choco install Net-Framework-Core -source windowsfeatures -y"
      ]
    },
    {
      "type":"powershell",
      "elevated_user": "{{user `user`}}",
      "elevated_password": "{{user `password`}}",
      "inline": [
        "choco install powershell -pre -y"
      ]
    },
    {
      "type": "windows-restart"
    },
    {
      "type":"windows-shell",
      "scripts": [
        "./scripts/enable-rdp.bat",
        "./scripts/disable-tasks.bat",
        "./scripts/perfomance-tuning.bat",
        "./scripts/registry-settings.bat"
      ]
    },
    {
      "type":"powershell",
      "inline": [
        "choco install VBoxGuestAdditions.install -y"
      ],
      "only": ["virtualbox-iso"]
    },
    {
      "type": "powershell",
      "scripts": [
        "./scripts/disable-services.ps1",
        "./scripts/cleanup.ps1"
      ]
    },
    {
      "type": "windows-restart"
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "keep_input_artifact": false,
      "output": "output-virtualbox-box/windows2012r2min-{{.Provider}}-{{user `version`}}.box",
      "vagrantfile_template": "vagrantfile-windows.template"
    }
  ],
  "variables": {
    "user": "vagrant",
    "password": "vagrant",
    "headless": "false",
    "iso_checksum": "78bff6565f178ed08ab534397fe44845",
    "iso_url": "iso/en_windows_server_2012_r2_with_update_x64_dvd_6052708.iso"
  }
}
